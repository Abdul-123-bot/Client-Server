        try{
            s = new Socket("127.0.0.1",1201);
            din = new DataInputStream(s.getInputStream());
            dout = new DataOutputStream(s.getOutputStream());
            String in = "";
            while(!in.equals("exit")){
                in = din.readUTF();
                jTextArea1.setText(jTextArea1.getText().trim()+"\nSERVER:"+in);
            }
        }catch(Exception e){
            
        } 
    }

