        String msg="";
        try{
            s = new ServerSocket(1201);
            sock = s.accept();
            din = new DataInputStream(sock.getInputStream());
            dout =new DataOutputStream(sock.getOutputStream());
            while(!msg.equals("exit")){
                msg = din.readUTF();
                area.setText(area.getText().trim()+"\nCLIENT:"+msg);
            }
        }catch(Exception e)
        {
        	
        }
    }

